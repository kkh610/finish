<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/aa"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/fabListView"
        android:layout_width="match_parent"
        android:layout_height="587dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/e">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/e"
                    android:gravity="center"
                    android:padding="5sp"
                    android:text="북다방"
                    android:textColor="@color/a"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/mm" />

                <TextView
                    android:id="@+id/signUpText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/ic_menu_myplaces"
                    android:textColor="#541300"
                    android:textSize="20dp"
                    android:visibility="gone" />
            </TableRow>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/searchText"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_weight="1"
                android:ems="10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="검색어를 입력하세요."
                android:inputType="textPersonName"
                android:textColor="@color/b"
                android:textColorHighlight="@color/b"
                android:textColorHint="@color/b"
                android:textColorLink="@color/b"
                android:textSize="25dp"
                app:fontFamily="@font/mm" />

            <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="15sp"
                android:layout_weight="1"
                android:background="@drawable/se"
                android:onClick="searchOnclick" />

            <TextView
                android:id="@+id/loginText"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginTop="15sp"
                android:layout_weight="1"
                android:background="@drawable/loginn"
                android:textColor="#541300"
                android:textSize="20dp"
                app:fontFamily="@font/mm" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bookButton"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:drawable/list_selector_background"
                android:clickable="true"
                android:focusable="true"
                android:text="Book"
                android:textAlignment="center"
                android:textColor="@color/b"
                android:textSize="30sp"
                app:fontFamily="@font/mm" />

            <TextView
                android:id="@+id/audioButton"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:drawable/list_selector_background"
                android:clickable="true"
                android:focusable="true"
                android:text="AudioBook"
                android:textAlignment="center"
                android:textColor="@color/b"
                android:textSize="30sp"
                app:fontFamily="@font/mm" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bestRankButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/event"
                            android:clickable="true"
                            android:text="베스트셀러"
                            android:textColor="@color/b"
                            android:textSize="24sp"
                            app:fontFamily="@font/mm" />

                        <Button
                            android:id="@+id/genre1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/event"
                            android:text="소설"
                            android:textColor="@color/b"
                            android:textSize="24sp"
                            app:fontFamily="@font/mm" />

                        <Button
                            android:id="@+id/genre2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/event"
                            android:text="시/에세이"
                            android:textColor="@color/b"
                            android:textSize="24sp"
                            app:fontFamily="@font/mm" />

                        <Button
                            android:id="@+id/genre3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/event"
                            android:text="자기계발"
                            android:textColor="@color/b"
                            android:textSize="24sp"
                            app:fontFamily="@font/mm" />

                        <Button
                            android:id="@+id/genre4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/event"
                            android:text="인문"
                            android:textColor="@color/b"
                            android:textSize="24sp"
                            app:fontFamily="@font/mm" />

                        <Button
                            android:id="@+id/genre5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/event"
                            android:text="예술"
                            android:textColor="@color/b"
                            android:textSize="24sp"
                            app:fontFamily="@font/mm" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/a"
            android:dividerHeight="2px"
            android:orientation="vertical"
            android:visibility="gone">


        </LinearLayout>


        <ListView
            android:id="@+id/bookListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:cacheColorHint="@color/f"
            android:divider="@drawable/black"
            android:dividerHeight="5px"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:textColor="@color/b"
            android:textSize="12sp"
            app:fontFamily="@font/mm" />

        <ListView
            android:id="@+id/audioListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/a"
            android:dividerHeight="2px"
            android:visibility="gone"
            app:fontFamily="@font/mm" />

        <ListView
            android:id="@+id/bestRankListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/a"
            android:dividerHeight="2px"
            android:visibility="visible"
            app:fontFamily="@font/mm" />

        <ListView
            android:id="@+id/bookListView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/a"
            android:dividerHeight="2px"
            android:visibility="gone"
            app:fontFamily="@font/mm" />

        <ListView
            android:id="@+id/bookListView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/a"
            android:dividerHeight="2px"
            android:visibility="gone"
            app:fontFamily="@font/mm" />

        <ListView
            android:id="@+id/bookListView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/a"
            android:dividerHeight="2px"
            android:visibility="gone"
            app:fontFamily="@font/mm" />

        <ListView
            android:id="@+id/bookListView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/a"
            android:dividerHeight="2px"
            android:visibility="gone"
            app:fontFamily="@font/mm" />

        <ListView
            android:id="@+id/bookListView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/a"
            android:dividerHeight="2px"
            android:visibility="gone"
            app:fontFamily="@font/mm" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/read"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50sp"
                android:textColor="@color/b"
                android:textSize="24sp"
                app:fontFamily="@font/mm" />

            <TextView
                android:id="@+id/read2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginRight="10sp"
                android:gravity="right"
                android:textColor="@color/b"
                android:textSize="24sp"
                app:fontFamily="@font/mm" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            app:backgroundTint="@color/b"
            app:layout_anchor="@id/fabListView"
            android:foregroundGravity="right"
            app:srcCompat="@android:drawable/ic_menu_edit" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mapButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/event"

            android:padding="5sp"
            android:text="MAP"
            android:textColor="@color/b"
            android:textSize="30sp"
            app:fontFamily="@font/mm" />

        <Button
            android:id="@+id/gameButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/event"
            android:padding="5sp"
            android:text="GAME"
            android:textColor="@color/b"
            android:textSize="30sp"
            app:fontFamily="@font/mm"
            android:onClick="gameb"/>

        <Button
            android:id="@+id/myPageButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/event"
            android:padding="5sp"
            android:text="MyPage"
            android:textColor="@color/b"
            android:textSize="30sp"
            app:fontFamily="@font/mm" />
    </LinearLayout>

</LinearLayout>